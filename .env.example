# Environment variables for MindMirror
# Copy this file to .env and fill in your actual values

# OpenAI API Key - Required for AI therapist functionality
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Session Secret - Used to encrypt user sessions
# Generate a random string (at least 32 characters)
SESSION_SECRET=your_super_secret_session_key_here_make_it_long_and_random

# Database Path (optional, defaults to ./mindmirror.db)
DATABASE_PATH=./mindmirror.db

# Server Port (optional, defaults to 5000)
PORT=5000